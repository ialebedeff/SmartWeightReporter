@using Entities.Database;

<style>
    .description {
        font-size: 1.35rem;
        color: #ABB3B9;
    }

    .title {
        font-size: 1.85rem;
        color: #252525;
        font-weight: 300;
        margin-bottom: 50px;
    }
</style>

<MudStack Style="padding: 40px; padding-left: 80px; padding-right: 80px;" Spacing="0">
    <MudText Class="description" Align="Align.Center">Гос. номер</MudText>
    <MudText Class="title" Align="Align.Center">@Truck.Number</MudText>

    

    <MudImage Width="350" Src="images/truck.svg"></MudImage>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" DisableElevation="true">
        <MudText>Подробнее</MudText>
    </MudButton>
</MudStack>

@code {
    [Parameter] public Truck Truck { get; set; } = null!;
}
